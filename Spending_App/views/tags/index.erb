<header><h3>All Tags</h3></header>

<table class='tags'>
  <tr>
    <th>Type</th>
    <th colspan="2">Merchants</th>
  </tr>
  <% for tag in @tags %>
  <tr>
    <td><a href="/tags/<%= tag.id() %>"><%= tag.type() %></a>
    </td>
    <td colspan="2">

      <%for transaction in @transactions%>
      <% if transaction.tag_id() == tag.id() %>
      <%=transaction.merchant.name() %>
      <% end %>
      <% end %>
      <% end %>
    </td>


  </tr>


</table>
